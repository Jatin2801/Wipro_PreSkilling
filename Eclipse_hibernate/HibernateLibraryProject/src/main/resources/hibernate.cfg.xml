<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.connection.driver_class">
			com.mysql.cj.jdbc.Driver
		</property>

		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/library25
		</property>

		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Sql@server1</property>

		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQL5Dialect
		</property>


		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>


		<mapping
			class="com.java.hibernatelibraryproject.resources.LibUsers" />
		<mapping
			class="com.java.hibernatelibraryproject.resources.Books" />
		<mapping
			class="com.java.hibernatelibraryproject.resources.TransBook" />
		<mapping
			class="com.java.hibernatelibraryproject.resources.TransReturn" />

	</session-factory>
</hibernate-configuration>
